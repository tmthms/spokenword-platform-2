    await setDoc(userDocRef, {
        role: 'programmer',
        email: email,
        status: 'pending' // Programmeurs moeten worden goedgekeurd
    });
    
    // (b) Maak het 'programmers' document (het volledige profiel)
    const programmerDocRef = doc(db, `programmers/${user.uid}`);
    const programmerData = {
        uid: user.uid,
