name: Deploy to Firebase Hosting

on:
  push:
    branches:
      - main

jobs:
  build_and_deploy:
    runs-on: ubuntu-latest
    steps:
      # Stap 1: Haal de code op uit je GitHub repo
      - name: Check out code
        uses: actions/checkout@v4

      # Stap 2: Setup Node.js (Nodig voor de build-stap)
      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
