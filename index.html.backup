                        </div>

                        <!-- Text Material -->
                        <div id="detail-text-section" class="mb-8 hidden">
                            <h4 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                                <i data-lucide="file-text" class="h-6 w-6 mr-2 text-indigo-600"></i>
                                Text Material
                            </h4>
                            <div class="bg-gray-50 p-6 rounded-lg">
                                <p id="detail-text-content" class="text-gray-700 whitespace-pre-line">No text material available.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Information (Only for Pro Users) -->
                    <div id="detail-contact-section" class="border-t pt-8">
                        <h3 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h3>
                        
                        <!-- Trial User Message -->
                        <div id="detail-trial-message" class="hidden bg-yellow-50 border-2 border-yellow-200 p-6 rounded-lg text-center">
                            <div class="flex items-center justify-center mb-3">
                                <i data-lucide="lock" class="h-8 w-8 text-yellow-600"></i>
                            </div>
                            <h4 class="text-xl font-semibold text-gray-900 mb-2">Upgrade to PRO to Contact Artists</h4>
                            <p class="text-gray-700 mb-4">Get full access to contact information and send messages to artists directly.</p>
                            <button class="bg-yellow-500 text-white px-6 py-3 rounded-md font-semibold hover:bg-yellow-600">
                                Upgrade Now
                            </button>
                        </div>

                        <!-- Pro User Contact Info -->
                        <div id="detail-contact-info" class="hidden">
                            <!-- Send Message Button (Prominent) -->
                            <div class="mb-6 text-center">
                                <button id="send-message-btn" class="bg-indigo-600 text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-indigo-700 shadow-lg transition duration-300 flex items-center justify-center mx-auto">
                                    <i data-lucide="send" class="h-6 w-6 mr-2"></i>
                                    Send Message to Artist
                                </button>
                                <p class="text-sm text-gray-500 mt-2">Start a conversation about booking this artist</p>
                            </div>
                            
                            <!-- Contact Details -->
                            <div class="bg-green-50 p-6 rounded-lg">
                                <h4 class="text-lg font-semibold text-gray-900 mb-4">Direct Contact</h4>
                                <div class="grid md:grid-cols-2 gap-4">
                                    <div>
                                        <div class="flex items-center mb-2">
                                            <i data-lucide="mail" class="h-5 w-5 mr-2 text-green-600"></i>
                                            <span class="font-semibold text-gray-700">Email:</span>
                                        </div>
                                        <a id="detail-email" href="#" class="text-indigo-600 hover:text-indigo-800 ml-7">email@example.com</a>
                                    </div>
                                    <div>
                                        <div class="flex items-center mb-2">
                                            <i data-lucide="phone" class="h-5 w-5 mr-2 text-green-600"></i>
                                            <span class="font-semibold text-gray-700">Phone:</span>
                                        </div>
                                        <a id="detail-phone" href="#" class="text-indigo-600 hover:text-indigo-800 ml-7">+32 123 456 789</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        
        <!-- Messages View -->
        <div id="messages-view" class="page-section">
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <div class="p-6 border-b border-gray-200">
                    <h2 class="text-3xl font-bold text-gray-900">Messages</h2>
                    <p class="text-gray-600 mt-2">Your conversations with artists and programmers</p>
                </div>
                
                <div class="p-6">
                    <!-- Loading State -->
                    <div id="conversations-loading" class="text-center py-8">
                        <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600"></div>
                        <p class="text-gray-600 mt-2">Loading conversations...</p>
                    </div>
                    
                    <!-- Empty State -->
                    <div id="conversations-empty" class="hidden text-center py-12">
                        <div class="flex justify-center mb-4">
                            <i data-lucide="inbox" class="h-16 w-16 text-gray-400"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">No conversations yet</h3>
                        <p class="text-gray-600">Start a conversation by sending a message to an artist!</p>
                    </div>
                    
                    <!-- Conversations List -->
                    <div id="conversations-list" class="hidden space-y-4">
                        <!-- Conversation items will be dynamically added here -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Conversation Detail View (Fase 3) -->
        <div id="conversation-detail-view" class="page-section">
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <!-- Header with Back Button -->
                <div class="p-6 border-b border-gray-200">
                    <button id="back-to-messages-btn" class="flex items-center text-indigo-600 hover:text-indigo-800 mb-4">
                        <i data-lucide="arrow-left" class="h-5 w-5 mr-2"></i>
                        Back to Messages
                    </button>
                    <div class="flex items-start justify-between">
                        <div>
                            <h2 id="conversation-participant-name" class="text-3xl font-bold text-gray-900">Loading...</h2>
                            <p id="conversation-participant-role" class="text-gray-600 capitalize mt-1">...</p>
                            <p id="conversation-subject" class="text-sm text-gray-500 mt-2"><strong>Subject:</strong> ...</p>
                        </div>
                    </div>
                </div>
                
                <!-- Messages Area -->
                <div class="p-6">
                    <!-- Loading State -->
                    <div id="messages-loading" class="text-center py-8">
                        <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600"></div>
                        <p class="text-gray-600 mt-2">Loading messages...</p>
                    </div>
                    
                    <!-- Messages List -->
                    <div id="messages-list" class="hidden space-y-4 mb-6 max-h-96 overflow-y-auto">
                        <!-- Message items will be dynamically added here -->
                    </div>
                    
                    <!-- Reply Form -->
                    <form id="reply-form" class="hidden border-t border-gray-200 pt-6">
                        <label for="reply-text" class="block text-sm font-medium text-gray-700 mb-2">Reply</label>
                        <textarea 
                            id="reply-text" 
                            rows="4" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 mb-3" 
                            placeholder="Type your reply..."
                            required
                        ></textarea>
                        <div class="flex justify-end">
                            <button 
                                type="submit" 
                                class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 flex items-center"
                            >
                                <i data-lucide="send" class="h-4 w-4 mr-2"></i>
                                Send Reply
                            </button>
                        </div>
                        <p id="reply-error" class="text-red-500 text-sm mt-3 hidden"></p>
                        <p id="reply-success" class="text-green-600 text-sm mt-3 hidden"></p>
                    </form>
                </div>
            </div>
        </div>

    </div>

    <!-- Message Modal -->
    <div id="message-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
        <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
            <div class="p-6 border-b border-gray-200">
                <div class="flex justify-between items-center">
                    <h3 class="text-2xl font-bold text-gray-900">Send Message</h3>
                    <button id="close-message-modal" class="text-gray-400 hover:text-gray-600">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <p class="text-gray-600 mt-2">Send a message to <span id="message-artist-name" class="font-semibold"></span></p>
            </div>
            
            <form id="send-message-form" class="p-6">
                <div class="mb-4">
                    <label for="message-subject" class="block text-sm font-medium text-gray-700 mb-2">Subject</label>
                    <input 
                        type="text" 
                        id="message-subject" 
                        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" 
                        placeholder="e.g., Booking inquiry for December event"
                        required
                    >
                </div>
                
                <div class="mb-6">
                    <label for="message-text" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
                    <textarea 
                        id="message-text" 
                        rows="8" 
                        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" 
                        placeholder="Write your message here..."
                        required
                    ></textarea>
                    <p class="text-sm text-gray-500 mt-2">Be professional and clear about your booking inquiry.</p>
                </div>
                
                <div class="flex justify-end space-x-3">
                    <button 
                        type="button" 
                        id="cancel-message-btn" 
                        class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50"
                    >
                        Cancel
                    </button>
                    <button 
                        type="submit" 
                        class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 flex items-center"
                    >
                        <i data-lucide="send" class="h-4 w-4 mr-2"></i>
                        Send Message
                    </button>
                </div>
                
                <p id="message-error" class="text-red-500 text-sm mt-4 hidden"></p>
                <p id="message-success" class="text-green-600 text-sm mt-4 hidden"></p>
            </form>
        </div>
    </div>

    <!-- Dit laadt al onze JavaScript-logica -->
    <script type="module" src="/main.js"></script>

</body>
</html>